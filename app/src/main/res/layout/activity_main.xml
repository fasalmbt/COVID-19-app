<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <!--Global status-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="ആഗോള നില"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#6699ff"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center_horizontal"
            android:text="ബാധിച്ച രാജ്യങ്ങൾ"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner"
            android:text="0"
            android:id="@+id/countries"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="#FB7575"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginTop="20dp"
            android:text="മൊത്തം കേസുകൾ"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="22sp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner"
            android:text="0"
            android:id="@+id/total_cases"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="#FB7575"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginTop="20dp"
            android:text="ഇന്നത്തെ കേസുകൾ"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="22sp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner"
            android:text="0"
            android:id="@+id/today_cases"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="#FB7575"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="ഭേദമായവർ"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="22sp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner"
            android:text="0"
            android:id="@+id/recovered"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="#FB7575"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginTop="20dp"
            android:text="ഇന്ന് ഭേദമായവർ"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="22sp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner"
            android:text="0"
            android:id="@+id/today_recovered"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="#FB7575"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center_horizontal"
            android:text="മരണം"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner"
            android:text="0"
            android:id="@+id/deaths"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="#FB7575"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center_horizontal"
            android:text="ഇന്നത്തെ മരണം"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner"
            android:text="0"
            android:id="@+id/today_deaths"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="#FB7575"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center_horizontal"
            android:text="നിലവിൽ രോഗമുള്ളവർ"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner"
            android:text="0"
            android:id="@+id/active"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="#FB7575"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center_horizontal"
            android:text="അത്യാസന നിലയിൽ ഉള്ളവർ"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner"
            android:text="0"
            android:id="@+id/critical"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="#FB7575"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal" />



    </LinearLayout>
</ScrollView>